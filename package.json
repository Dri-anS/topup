{
	"name": "topup",
	"version": "0.0.1",
	"private": true,
	"engines": {
		"node": "v16.x"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "svelte-kit sync && vite build",
		"start": "npm run migrate:up; node --enable-source-maps build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check .",
		"format": "prettier --plugin-search-dir . --write .",
		"migrate:drop": "dotenv -- bash -c 'migrate -path migration -database \"$DATABASE_URL\" drop'",
		"migrate:down": "dotenv -- bash -c 'migrate -path migration -database \"$DATABASE_URL\" down'",
		"migrate:up": "dotenv -- bash -c 'migrate -path migration -database \"$DATABASE_URL\" up'",
		"lt": " lt -p 5173 -s falentio-topup --print-requests"
	},
	"devDependencies": {
		"@fontsource/ibm-plex-mono": "^4.5.13",
		"@fontsource/public-sans": "^4.5.12",
		"@iconify/svelte": "^3.1.0",
		"@panva/hkdf": "^1.1.1",
		"@sveltejs/adapter-node": "^1.2.3",
		"@sveltejs/kit": "^1.16.2",
		"@types/bcryptjs": "^2.4.2",
		"@types/luxon": "^3.3.0",
		"@vitejs/plugin-basic-ssl": "^1.0.1",
		"autoprefixer": "^10.4.14",
		"bcryptjs": "^2.4.3",
		"cssnano": "^5.0.8",
		"daisyui": "^2.51.5",
		"decimal.js": "^10.4.3",
		"dotenv": "^16.0.3",
		"dotenv-cli": "^7.2.1",
		"fuse.js": "^6.6.2",
		"jdenticon": "^3.2.0",
		"jose": "^4.13.1",
		"localtunnel": "^2.0.2",
		"luxon": "^3.3.0",
		"mem": "^9.0.2",
		"nanoid": "^4.0.2",
		"postcss": "^8.4.21",
		"postcss-load-config": "^3.1.0",
		"postgres": "^3.3.4",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"sharp": "^0.32.0",
		"svelte": "^3.59.1",
		"svelte-check": "^3.0.1",
		"svelte-preprocess": "^5.0.3",
		"svelte-tiny-linked-charts": "^1.2.1",
		"tailwindcss": "^3.3.0",
		"tslib": "^2.4.1",
		"tsx": "^3.12.6",
		"typescript": "^5.0.0",
		"undici": "^5.22.0",
		"vite": "^4.3.2",
		"vitest": "^0.25.3",
		"wild-wild-path": "^3.6.0",
		"zod": "^3.21.4"
	},
	"type": "module"
}
